{
	"name": "unver",
	"version": "0.0.1",
	"type": "module",
	"description": "Universal Signature Verification for Ethers",
	"scripts": {
		"build": "zshy --project tsconfig.build.json",
		"changeset:prepublish": "bun run build",
		"changeset:publish": "bun changeset:prepublish && changeset publish",
		"changeset:version": "changeset version && bun changeset:prepublish && bun check",
		"check": "biome check . --write --unsafe",
		"check:types": "tsc --noEmit",
		"gen": "forge build --config-path ./contracts/foundry.toml && bun run scripts/generateTypedArtifacts.ts",
		"postinstall": "bun gen",
		"test": "bun test src"
	},
	"zshy": {
		"exports": {
			".": "./src/index.ts"
		},
		"cjs": false
	},
	"keywords": [
		"ethers",
		"signature",
		"verification"
	],
	"author": "jxom <j@wevm.dev>",
	"license": "MIT",
	"devEngines": {
		"runtime": {
			"name": "bun",
			"version": ">=1.2",
			"onFail": "error"
		}
	},
	"peerDependencies": {
		"ethers": "^6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.6",
		"@types/bun": "latest",
		"ethers": "^6.15.0",
		"prool": "^0.0.24",
		"typescript": "^5.9.2",
		"zshy": "^0.4.1"
	},
	"files": [
		"dist"
	],
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	}
}
